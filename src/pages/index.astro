---
import BaseLayout from "../layouts/BaseLayout.astro";
import Subscribe from "../components/subscribe.astro";
// If you want Starlight’s built-in search UI:
import Search from "@astrojs/starlight/components/Search.astro";
// If you actually use <Image>, import it; otherwise remove:
// import { Image } from "astro:assets";
const { title } = Astro.props;
---

<BaseLayout {title}>
 <article>
 <section
     class="relative py-14 lg:pt-44 lg:pb-24 bg-gray-100 dark:bg-gray-900 bg-center bg-cover bg-no-repeat"
     style="background-image: url('/assets/LKCAJS.jpg');"
 >
  <!-- overlay for readability -->
  <div class="absolute inset-0 bg-black/40 dark:bg-black/50"></div>

  <div class="relative w-full max-w-7xl mx-auto px-4 lg:px-8">
   <div class="w-full max-w-4xl mx-auto sm:px-12 mb-10 lg:mb-20 text-center">
    <h1 class="font-manrope font-bold text-4xl leading-snug sm:text-5xl mb-5 text-white">
     Judaica Collections and Resources at Penn
    </h1>
    <p class="text-xl font-medium leading-8 text-gray-100 mb-8 max-w-xl mx-auto">
     Explore one of the most significant repositories of Jewish history, culture, and heritage in North America.
     Access digitized manuscripts, rare books, periodicals, and archival treasures curated for scholars and the public.
    </p>

    <!-- Starlight’s search (opens modal, supports Pagefind) -->


    <!-- If you prefer your own input instead of <Search />, use this accessible form.
         Wire it to your search route or Pagefind JS. Remove <Search /> above if you use this. -->
