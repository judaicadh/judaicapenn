---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <section class="py-24">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="mb-12">
                <h2 class="font-manrope text-5xl text-center font-bold text-gray-900 mb-6">
                    Our Team
                </h2>
            </div>

            <div class="flex flex-wrap justify-center gap-x-16 gap-y-14 max-w-3xl mx-auto lg:max-w-full">
                <!-- Laura -->
                <a
                        href="https://www.library.upenn.edu/staff/laura-newman-eckstein"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group block text-center lg:w-1/5 sm:w-1/3 min-[450px]:w-1/2 w-full"
                >
                    <div class="relative mb-5">
                        <img
                                src="https://www.library.upenn.edu/sites/default/files/2024-03/EcksteinHeadshot2.png"
                                alt="Eckstein image"
                                class="w-58 h-58 filter grayscale rounded-2xl object-cover mx-auto transition-all duration-500 border-2 border-solid border-transparent group-hover:border-indigo-600"
                        />
                    </div>
                    <h4 class="text-xl text-gray-900 font-semibold mb-2 transition-all duration-500 group-hover:text-indigo-600">
                        Laura Newman Eckstein
                    </h4>
                    <p class="text-gray-500 font-light block transition-all duration-500 group-hover:text-gray-900">
            Arnold and Deanne Kaplan Curator of Judaica Digital Humanities at the University of Pennsylvania Libraries
          </p>
                </a>

                <!-- Mitch -->
                <a
                        href="https://www.library.upenn.edu/staff/mitch-fraas"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group block text-center lg:w-1/5 sm:w-1/3 min-[450px]:w-1/2 w-full"
                >
                    <div class="relative mb-5">
                        <img
                                src="https://pbs.twimg.com/profile_images/488461542073962496/z7-jayqJ_400x400.jpeg"
                                alt="Fraas image"
                                class="w-58 h-58 rounded-2xl object-cover mx-auto transition-all duration-500 border-2 border-solid border-transparent group-hover:border-indigo-600"
                        />
                    </div>
                    <h4 class="text-xl text-gray-900 font-semibold mb-2 transition-all duration-500 group-hover:text-indigo-600">
                        Mitch Fraas
                    </h4>
                    <p class="text-gray-500 font-light block transition-all duration-500 group-hover:text-gray-900">
            Senior Curator for Special Collections at the Kislak Center for Special Collections, Rare Books and Manuscripts at the University of Pennsylvania Libraries
          </p>
                </a>

                <!-- Arthur -->
                <a
                        href="https://www.library.upenn.edu/staff/arthur-kiron"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group block text-center lg:w-1/5 sm:w-1/3 min-[450px]:w-1/2 w-full"
                >
                    <div class="relative mb-5">
                        <img
                                src="https://jwst.sas.upenn.edu/sites/default/files/styles/profile_list/public/files/kiron.jpg?itok=_Xd6SnvY"
                                alt="Kiron image"
                                class="w-58 h-58 rounded-2xl object-cover mx-auto transition-all duration-500 border-2 border-solid border-transparent group-hover:border-indigo-600"
                        />
                    </div>
                    <h4 class="text-xl text-gray-900 font-semibold mb-2 transition-all duration-500 group-hover:text-indigo-600">
                        Arthur Kiron
                    </h4>
                    <p   class="text-gray-500 font-light block transition-all duration-500 group-hover:text-gray-900">
            Schottenstein-Jesselson Curator of Judaica Collections at the University of Pennsylvania Libraries
          </p>
                </a>
            </div>
        </div>
    </section>
</BaseLayout>