---
import config from 'virtual:starlight/user-config';
import LanguageSelect from '@astrojs/starlight/components/LanguageSelect.astro';
import Search from '@astrojs/starlight/components/Search.astro';
import SiteTitle from '@astrojs/starlight/components/SiteTitle.astro';
import SocialIcons from '@astrojs/starlight/components/SocialIcons.astro';
import ThemeSelect from '@astrojs/starlight/components/ThemeSelect.astro';
import Logo from '../assets/pomegranate.svg';

// Render Search only if Pagefind is enabled or overridden
const shouldRenderSearch =
    config.pagefind || config.components.Search !== '@astrojs/starlight/components/Search.astro';
---

<nav class="sl-navhost bg-white border-gray-200 dark:border-gray-600 dark:bg-gray-900">
    <div class="container mx-auto max-w-screen-xl p-4 flex flex-wrap items-center">
        <!-- Brand -->
        <a href="/" class="order-1 flex items-center gap-3 rtl:space-x-reverse">
            <img src={Logo.src} width={30} height={30} alt="Judaica at Penn Logo"></img>
            <span class="text-2xl font-semibold  whitespace-nowrap dark:text-white">
        Penn's Judaica Collections
      </span>
        </a>

        <!-- Mobile toggle -->
        <button
                class="order-2 inline-flex items-center p-2 w-10 h-10 ml-auto justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                type="button"
                data-collapse-toggle="mega-menu-full"
                aria-controls="mega-menu-full"
                aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M1 1h15M1 7h15M1 13h15"/>
            </svg>
        </button>

        <!-- DESKTOP: links + search share this row and align right -->
        <div class="order-4 hidden md:flex items-center gap-8 ml-auto print:hidden">
            <!-- Desktop nav links -->
            <ul class="flex items-center space-x-8 rtl:space-x-reverse">
                <li><a href="/" class="navlink" aria-current="page">Home</a></li>
                <li>
                    <button
                            id="mega-menu-full-dropdown-button"
                            data-collapse-toggle="mega-menu-full-dropdown"
                            class="navlink flex items-center">
                        Resources
                        <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                        </svg>
                    </button>
                </li>
                <li><a href="/collections" class="navlink">Collections</a></li>
                <li><a href="/judaicadh" class="navlink">Judaica DH</a></li>
                <li><a href="/about" class="navlink">About</a></li>
            </ul>

            <!-- Desktop search -->
            {shouldRenderSearch && (
                    <div class="w-72 min-w-[14rem] bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm px-2 py-1">
                        <Search id="search-desktop" className="pagefind-ui" uiOptions={{ showImages: false }} />
                    </div>
            )}
        </div>

        <!-- MOBILE COLLAPSIBLE ONLY -->
        <div id="mega-menu-full" class="order-3 hidden w-full md:hidden font-medium">
            {shouldRenderSearch && (
                    <div class="w-full px-4 pt-2">
                        <div class="bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm px-2 py-1">
                            <Search id="search-mobile"  className="pagefind-ui" uiOptions={{ showImages: false }} />
                        </div>
                    </div>
            )}

            <ul class="flex flex-col mt-4 p-3 rounded-lg border bg-gray-50
                 dark:bg-gray-800 border-gray-100 dark:border-gray-700">
                <li><a href="/" class="navlink">Home</a></li>
                <li>
                    <button
                            id="mega-menu-full-dropdown-button-mobile"
                            data-collapse-toggle="mega-menu-full-dropdown"
                            class="navlink flex items-center justify-between w-full">
                        Resources
                        <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                        </svg>
                    </button>
                </li>
                <li><a href="/collections" class="navlink">Collections</a></li>
                <li><a href="/judaicadh" class="navlink">Judaica DH</a></li>
                <li><a href="/about" class="navlink">About</a></li>
            </ul>
        </div>
    </div>

    <!-- Megamenu flyout -->
    <div id="mega-menu-full-dropdown"
         class="hidden mt-1 border-y border-gray-200 shadow-xs bg-gray-50 md:bg-white dark:bg-gray-800 dark:border-gray-600">
        <div class="grid max-w-screen-xl px-4 py-5 mx-auto text-gray-900 dark:text-white sm:grid-cols-2 md:px-6">
            <ul>
                <li>
                    <a href="/resources/libguides" class="block p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <div class="font-semibold">LibGuides</div>
                        <span class="text-sm text-gray-500 dark:text-gray-400">Research guides created by Penn librarians.</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="block p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <div class="font-semibold">Finding Aids</div>
                        <span class="text-sm text-gray-500 dark:text-gray-400">Information on Pennâ€™s Judaica collections.</span>
                    </a>
                </li>
            </ul>
            <ul>
                <li>
                    <a href="https://judaicadh.github.io/legacyexhibits/" target="_blank" class="block p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <div class="font-semibold">Exhibits</div>
                        <span class="text-sm text-gray-500 dark:text-gray-400">Exhibits by Katz Center Fellows as well as collection highlights.</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="block p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <div class="font-semibold">Digital Repository</div>
                        <span class="text-sm text-gray-500 dark:text-gray-400">Access digitized Judaica materials.</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<style>
    @layer starlight.components {
        .sl-navhost { --sl-nav-gap: 1rem; --sl-nav-pad-x: 1rem; }
        .sl-navhost :where(ul, ol){ margin:0; padding:0; list-style:none; }
        .sl-navhost #search-desktop :where(input){ min-width:0; }
        .sl-navhost :where(svg){ display:inline-block; vertical-align:middle; }

        /* unified link style */

    }
</style>